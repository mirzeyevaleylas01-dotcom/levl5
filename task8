#n eded-min,max,edediorta
#include <iostream>
using namespace std;

void stats(int n){
    int x, max, min, sum = 0;

    cin >> x;
    max = min = x;
    sum = x;

    for(int i = 2; i <= n; i++){
        cin >> x;
        if(x > max) max = x;
        if(x < min) min = x;
        sum += x;
    }

    cout << max << endl;
    cout << min << endl;
    cout << sum / n << endl;
}

int main(){
    int n;
    cin >> n;
    stats(n);
}

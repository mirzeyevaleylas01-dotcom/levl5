#tekvecutindekscemleri
#include <iostream>
using namespace std;

void sumEvenOdd(int n){
    int a[n];
    for(int i = 0; i < n; i++) cin >> a[i];

    int even = 0, odd = 0;

    for(int i = 0; i < n; i++){
        if(i % 2 == 0) even += a[i];
        else odd += a[i];
    }

    cout << even << endl;
    cout << odd << endl;
}

int main(){
    int n;
    cin >> n;
    sumEvenOdd(n);
}
